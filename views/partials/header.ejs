<nav class="navbar navbar-expand-md navbar-dark bg-success">
  <a class="navbar-brand" href="/urls">TinyApp</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/urls">My URLs</a>
      <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
    </div>
  </div>

  <% if (username) { %> 

    <div id="logoutOption">
      <form action="/logout" class="form-inline" method="POST">
        <div class="form-group mb-2">
          <label for="logout">Logged in as <%= username %>! </label>
          <button name="logout" type="submit" class="btn btn-outline-dark" style="margin: 1em">logout</button>
        </div>
      </form>
    </div>
    
    <% } else { %>
      
      <div id="loginOption">
        <form action="/login" class="form-inline" method="POST">
          <div class="form-group mb-2">
            <input type="text" name="username" placeholder="Enter username" style="width: 175px; margin: 1em">
            <button type="submit" class="btn btn-outline-dark">login</button>
          </div>
        </form>
      </div>

  <% } %> 





</nav>


