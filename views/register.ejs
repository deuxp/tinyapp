<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %> 
</head>

<header>
  <%- include('./partials/header') %> 
</header>

<body>
  <div class="card text-center">
    <div class="card-header text-muted"></div>
    <div class="card-body">
      <h5 class="card-title">Register your account!</h5>
        <div id="registration-field">
          <form action="/register" method="POST">
            <div class="form-group mb-1">
              <input type="email" name="email" placeholder="Enter email" style="width: 300px; margin: 1em">
            </div>
            <div class="form-group mb-1">
              <input type="password" name="password" aria-describedby="passhelp" placeholder="Enter password" style="width: 300px;">
              <small id="passhelp" class="form-text text-muted">password must be at least 8 characters</small>
            </div>
            <button type="submit" class="btn btn-primary" style="width:300px">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>

<%- include('./partials/bootstrapJS') %>

</body>
</html>
